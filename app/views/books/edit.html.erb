<h1>Edit Book</h1>
<%= form_for(@book) do |f| %>
  <div class="form">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control'  %><br/>

    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control', step: 0.01 %><br/>

    <%= f.label :quantity %>
    <%= f.number_field :quantity, class: 'form-control' %><br/>

  </div>
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-primary" %>
  </div>
<% end %>